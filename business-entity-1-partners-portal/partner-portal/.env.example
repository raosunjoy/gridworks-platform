# Database
DATABASE_URL="postgresql://username:password@localhost:5432/trademate_partner_portal?schema=public"

# NextAuth.js Configuration
NEXTAUTH_URL="http://localhost:3001"
NEXTAUTH_SECRET="your-secret-key-here-at-least-32-characters-long"

# OAuth Providers
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

GITHUB_ID="your-github-client-id"
GITHUB_SECRET="your-github-client-secret"

# API Configuration
API_BASE_URL="http://localhost:8000"
API_TIMEOUT=30000

# Environment
NODE_ENV=development
NEXT_PUBLIC_APP_URL="http://localhost:3001"

# Monitoring
SENTRY_DSN="your-sentry-dsn"
SENTRY_ORG="your-sentry-org"
SENTRY_PROJECT="your-sentry-project"

# Email (for password reset)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
SMTP_FROM="TradeMate <no-reply@trademate.com>"

# Redis (for sessions and caching)
REDIS_URL="redis://localhost:6379"

# File Upload
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES="image/jpeg,image/png,image/gif,application/pdf"

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=100

# Feature Flags
FEATURE_STORYBOOK=true
FEATURE_E2E_TESTING=true
FEATURE_SELF_HEALING=true
FEATURE_ANALYTICS=true