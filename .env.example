# TradeMate Environment Configuration
# Copy this file to .env and fill in your actual values

# Application Settings
DEBUG=true
SECRET_KEY=your-super-secret-key-here-change-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/trademate
REDIS_URL=redis://localhost:6379/0

# WhatsApp Business API
WHATSAPP_ACCESS_TOKEN=your-whatsapp-business-api-token
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your-webhook-verify-token
WHATSAPP_APP_SECRET=your-whatsapp-app-secret

# AI/ML API Keys
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key-optional
HUGGINGFACE_API_KEY=your-huggingface-token-optional

# Trading Platform APIs
ZERODHA_API_KEY=your-zerodha-api-key
ZERODHA_API_SECRET=your-zerodha-api-secret
UPSTOX_API_KEY=your-upstox-api-key
UPSTOX_API_SECRET=your-upstox-api-secret

# Regulatory APIs
SEBI_AA_CLIENT_ID=your-sebi-account-aggregator-client-id
SEBI_AA_CLIENT_SECRET=your-sebi-account-aggregator-secret
CKYC_API_KEY=your-ckyc-api-key

# Setu API Integration (Financial Services)
SETU_CLIENT_ID=your-setu-client-id
SETU_CLIENT_SECRET=your-setu-client-secret
SETU_BASE_URL=https://prod.setu.co

# Enterprise Security
ENCRYPTION_KEY=your-256-bit-encryption-key-base64-encoded
HSM_KEY_ID=your-hardware-security-module-key-id-optional
AUDIT_ENCRYPTION_KEY=your-audit-trail-encryption-key

# Market Data APIs
MARKET_DATA_API_KEY=your-market-data-api-key
NEWS_API_KEY=your-news-api-key

# Background Tasks
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Monitoring (Optional)
SENTRY_DSN=your-sentry-dsn-for-error-tracking
LOG_LEVEL=INFO

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Feature Flags
ENABLE_SOCIAL_TRADING=false
ENABLE_OPTIONS_TRADING=false
ENABLE_CRYPTO_TRADING=false